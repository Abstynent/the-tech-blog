<div class="container bg-content">
  <div class="row">
    <div class="col-sm-9 mx-auto mb-2">
      <div class="card">
        <div class="card-header">
          <h2>{{post.title}}</h2>
          <p>{{post.content}}</p>
        </div>
        <div class="card-body">
          Posted by {{post.user/name}} on {{format_date post.date_created}} @ {{format_time post.date_created}}
        </div>
      </div>
    </div>
  </div>

  {{> comments }}
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="../js/comment.js"></script>